<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme dark -->
    <attr name="textColorPrimary" format="color"/>

    <style name="Base.Theme.EcoSupport" parent="Theme.AppCompat">
        <!-- Atribuir o estilo do botão de acordo com o tema do sistema -->
        <item name="android:windowBackground">@color/darkPrimary</item>
        <item name="android:textColor">@color/lightPrimary</item>
        <item name="textColorPrimary">@color/darkPrimary</item>

    </style>

    <style name="ImageStyle">
        <item name="android:src">@drawable/my_image_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageStyle2">
        <item name="android:src">@drawable/my_image_dark_2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageStyle3">
        <item name="android:src">@drawable/my_image_dark_3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageStyle4">
        <item name="android:src">@drawable/my_image_error_login_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageStyleSearch">
        <item name="android:src">@drawable/my_image_search_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/lightPrimary</item>
    </style>

    <style name="ImageStyleSearchSecondary">
        <item name="android:src">@drawable/my_image_search</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkPrimary</item>
    </style>

    <!-- Estilo para botão dark -->
    <style name="ButtonDarkStyle" >
        <item name="android:background">@drawable/button_light_on_dark_background</item>
        <item name="android:textColor">@color/darkPrimary</item>
    </style >

    <!-- Estilo para botão light -->
    <style name="ButtonLightStyle" >
        <item name="android:background">@drawable/button_dark_on_light_background</item>
        <item name="android:textColor">@color/lightPrimary</item>
    </style >

    <style name="EditTextStyle" >
        <item name="android:background">@drawable/edit_text_dark_background</item>
        <item name="android:textColor">@color/darkPrimary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
    </style>

    <style name="SpinnerBackgroundStyle" >
        <item name="android:background">@drawable/spinner_dark_background</item>
        <item name="android:popupBackground">@drawable/spinner_dark_dropdown_background</item>
    </style>

    <style name="CardBackgroundStyle" >
        <item name="android:background">@drawable/dashboard_card_background_dark</item>
    </style>

    <style name="CardBackgroundStyleSecondary" >
        <item name="android:background">@drawable/dashboard_card_background</item>
    </style>

    <style name="Theme.EcoSupport" parent="Base.Theme.EcoSupport" />
</resources>
